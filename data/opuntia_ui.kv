#:import hex_color kivy.utils.get_color_from_hex


<HBox@BoxLayout>
    orientation: 'horizontal'
    spacing: '6dp'


<VBox@BoxLayout>
    orientation: 'vertical'
    spacing: '6dp'


<FilterButton@Button>
    size_hint: (None, None)
    height: '42dp'
    width: '207dp'


<Document_Preview@BoxLayout>
    Image:
        size_hint: (None, None)
        size: (36, 36)
        source: 'data/pixmaps/icon.png'


<FileChooserScreen>:
    app: app

    canvas.before:
        Color:
            rgba: hex_color('000000')
        Rectangle:
            pos: self.pos
            size: self.size
    HBox:
        valign: 'top'
        VBox:
            spacing: '6dp'
            padding: '10dp'
            size_hint_x: None
            halign: 'middle'
            valign: 'top'
            width: '220dp'

            # XXX Improve the aligment of preview
            VBox:
                size_hint: (None, None)
                size: ('220dp', '250dp')
                halign: 'middle'
                Label:
                    text: 'Preview'
                Image:
                    size_hint: (None, None)
                    size: ('120dp', '120dp')
                    source: root.preview_file(filechooser_iconview.selection) or 'No file selected!'
                Label:
                    text: 'Image description\n This is a Test\n Thanks'
            Button:
                text: 'All'
                on_release: root.select_filter('*')
            Button:
                text: 'Presentation'
                on_release: root.select_filter('presentation')
            Button:
                text: 'Music'
                on_release: root.select_filter('music')
            Button:
                text: 'Video'
                on_release: root.select_filter('video')
            Button:
                text: 'Image'
                on_release: root.select_filter('image')
        FileChooserIconView:
            id: filechooser_iconview
            rootpath: root.home_path()
            on_submit: root.select_file(filechooser_iconview.selection)


<MainScreen>
    HBox:
        VBox:
            padding: '10dp'
            spacing: '10dp'
            HBox:
                Button:
                    text: 'Without Removable Drive'
                Button:
                    text: 'Local Drive'
                    on_release: root.source_selected()
            HBox:
                Button:
                    text: 'Google Drive'
                Button:
                    text: 'Dropbox'
                Button:
                    text: 'Youtube'

<Main>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: hex_color('f2f2f2ff')
        Rectangle:
            pos: self.pos
            size: self.size
    ScreenManager:
        id: screen_manager
